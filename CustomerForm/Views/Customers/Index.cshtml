@model IEnumerable<CustomerForm.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p class="float-end">
    <h5><i class="bi bi-plus-circle"></i><a class="btn btn-primary" asp-action="Create"  asp-controller="Customers">Create</a></h5>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProfileImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNumber)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">
                    <img class="rounded-circle" src="@item.ProfileImg" alt="@item.ProfileImg" style="max-width: 150px" />
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.CustomerEmail)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.MobileNumber)
                </td>
                
                

                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.CustomerAddress)
                </td>
                <td>
                <td class="align-middle">
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.CustomerId"><i class="bi bi-pencil-square"></i>Edit </a> |
                </td>
                </td>
            </tr>
        }
    </tbody>
</table>
